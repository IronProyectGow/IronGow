<h2 class="mt-5 ml-5">Complete your Bar profile</h2>

<form method='post' class="ml-5">
  <div class="form-group">
    <label for="description">Description</label>

    <textarea type="text" class="form-control {{#if errors.description }}is-invalid{{/if}}" id="bar-description" aria-describedby="text" name='description' placeholder="Description">{{bar.description}}</textarea>

          {{#if errors.description }}
              <div class="invalid-feedback">
            {{ errors.description }}
              </div>
            {{/if}}
  </div>
  <div class="form-group m-1">
    <label for="capacity">Capacity</label>

    <input type="number" class="form-control col-sm-1 {{#if errors.capacity }}is-invalid{{/if}}" id="capacity" name='capacity' placeholder="Capacity" value="{{bar.capacity}}">

            {{#if errors.capacity }}
              <div class="invalid-feedback">
            {{ errors.capacity }}
              </div>
            {{/if}}
  </div>
  <div>
    <label>Address</label>
    
    {{!-- <input type="text" name="adress" id="adressInput"> --}}
    <input type="string"  name="longitude" placeholder="Longitude" id="longitude" class='d-none'>
    <input type="string" name="latitude" placeholder="Latitude" id="latitude" class='d-none'>
  </div>



