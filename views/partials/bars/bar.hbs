
<div class="container">
  <div class="row">
    <div class="col-sm">
        <h3 class="title">{{bar.name}}</h3>
          <div class="card mt-3" style="width: 18rem;">
          <div class="card-body">
            <img src="{{bar.gallery}}" alt="picture">
            <h6 class="title mt-2">{{bar.description}}</h6>
            <h6 class="card-subtitle m-2 text-muted">Capacity: <span>{{bar.capacity}}</span></h6>
        </div>
        <a href="/bars/{{bar.id}}/edit" class="btn btn-outline-warning btn-sm mb-1">Edit</a>
