<div class="container">
  <div class="row">
    <div class="col-sm">
        <h3 class="title">{{bar.name}}</h3>
          <div class="card mt-3" style="width: 18rem;">
          <div class="card-body">
            <img src="{{bar.gallery}}" alt="picture">
            <h6 class="title mt-2">{{bar.description}}</h6>
            <h6 class="card-subtitle m-2 text-muted">Capacity: <span>{{bar.capacity}}</span></h6>
        </div>
        <a href="/bars/{{bar.id}}/edit" class="btn btn-outline-warning btn-sm">Edit</a>
        <a href="/bars/{{bar.id}}/createEvent" class="btn btn-outline-warning btn-sm">Create Event</a> 
        </div>
        <a href="/bars" ><i class="fa fa-angle-left mt-5" aria-hidden="true"></i></a>
    </div>
    <div class="col-sm">
          {{#if events}}
          <h3 class="title">Upcoming events</h3>
          {{/if}}
      {{> events/event_list }}
    </div>
  </div>
</div>




        







  


