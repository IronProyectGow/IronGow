        </div>
        <a href="/bars" ><i class="fa fa-angle-left mt-5" aria-hidden="true"></i></a>
    </div>
    <div class="col-sm">
          {{#if events}}
          <h3 class="title">Upcoming events</h3>
          {{/if}}
      {{> events/event_list }}
    </div>



<h3 class="title">{{bar.name}}</h3>
<div class="card m-5" style="width: 18rem;">
  <div class="card-body">
    <img src="{{bar.gallery}}" alt="picture">
    <h6 class="title">{{bar.description}}</h6>
    <h6 class="card-subtitle m-2 text-muted">Capacity: <span>{{bar.capacity}}</span></h6>
    <h1>{{bar.coordinates.[0]}}</h1>
    <address>
      <input type="text" id='latitude' value="{{ bar.location.coordinates.[0] }}"/>
      <input type="text" id='longitude' value="{{ bar.location.coordinates.[1] }}"/>
    </address>

  </div>
</div>





        







  



