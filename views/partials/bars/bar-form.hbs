<h2 class="mt-5 ml-5">Complete your Bar profile</h2>

<form method='post' class="ml-5">
  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control" id="artis-description" aria-describedby="text" name='description' placeholder="Description">{{this.description}}</textarea>
  </div>
   <div class="form-group">
    <label for="capacity" class="m-1">Capacity</label>
    <input type="number" class="form-control" id="capacity" name='capacity' placeholder="Capacity" value="{{this.capacity}}">
  <button type="submit" class="btn btn-primary mb-5">Submit</button>
</form>
 