<h2 class="mt-5 ml-5">Complete your Bar profile</h2>

<form method='post' class="ml-5">
  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control {{#if errors.description }}is-invalid{{/if}}" id="bar-description" aria-describedby="text" name='description' placeholder="Description">{{this.description}}</textarea>
          {{#if errors.description }}
              <div class="invalid-feedback">
            {{ errors.description }}
              </div>
            {{/if}}
  </div>
  <div class="form-group m-1">
    <label for="capacity">Capacity</label>
    <input type="number" class="form-control col-sm-1 {{#if errors.capacity }}is-invalid{{/if}}" id="capacity" name='capacity' placeholder="Capacity" value="{{this.capacity}}">
            {{#if errors.capacity }}
              <div class="invalid-feedback">
            {{ errors.capacity }}
              </div>
            {{/if}}

  <div>
    <label>Address</label>
    <input type="number"  name="longitude" placeholder="Longitude">
    <input type="number" name="latitude" placeholder="Latitude" >
  </div>
 
  <button type="submit" class="btn btn-outline-info mt-3">Submit</button>
</form>

<a href="/bars/{{bar.id}}"><i class="fa fa-angle-left ml-5" aria-hidden="true"></i></a>
