<h2 class="mt-5 ml-5">Complete your Artist profile</h2>

<form method='post' class="ml-5">
  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control" id="artis-description" aria-describedby="text" name='description' placeholder="Description">{{this.description}}</textarea>
  </div>
  <div class="form-group">
    <label for="music-type" class="m-1">Music Genre</label>
    <select name="genre">
      <option name="Soul" value="Soul">Soul</option>
      <option name="Rock" value="Rock">Rock</option>
      <option name="Acoustic" value="Acoustic">Acoustic</option>
      <option name="Pop" value="Pop">Pop</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary mb-5">Submit</button>
</form>
 