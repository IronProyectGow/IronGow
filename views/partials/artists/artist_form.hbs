<h2 class="mt-5 ml-5">Complete your Artist profile</h2>

<form method='post' class="ml-5">
  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" class="form-control {{#if errors.description }}is-invalid{{/if}}" id="artist-description" aria-describedby="text" name='description' placeholder="Description">{{this.description}}</textarea>
            {{#if errors.description }}
              <div class="invalid-feedback">
            {{ errors.description }}
              </div>
            {{/if}}
  </div>
  <div class="form-group">
    <label for="music-type" class="m-1">Music Genre</label>
    <select name="genre">
      <option name="Soul" value="Soul">Soul</option>
      <option name="Rock" value="Rock">Rock</option>
      <option name="Acoustic" value="Acoustic">Acoustic</option>
      <option name="Pop" value="Pop">Pop</option>
    </select>
  </div>
  <button type="submit" class="btn btn-outline-info mb-5">Submit</button>
</form>
