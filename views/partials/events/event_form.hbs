<h2 class="mt-5 ml-5">Create your event</h2>

<form method='post' action='/events/createEvent' class="ml-5">
  <input name="bar" value="{{bar.id}}" type="hidden">
  <div class="form-group">
    <label for="description">Name</label>
    <textarea type="text" class="form-control" id="name" aria-describedby="text" name='name' placeholder="name" value="{{event.name}}"></textarea>
  </div>
  <div class="form-group">
    <label for="capacity">Price</label>
    <input type="text" class="form-control" id="price" name='price' placeholder="Price" value="{{event.price}}">
  </div>
  <button type="submit" class="btn btn-primary mb-5">Submit</button>
</form>