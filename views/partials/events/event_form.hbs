<h2 class="mt-5 ml-5">Create your event</h2>

<form method='post' 
action=
{{#if event.isNew}} 
  '/events/createEvent'
{{else}}
  '/events/{{event.id}}/edit'
{{/if}}
class="ml-5">
  <input name="bar" value="{{bar.id}}" type="hidden">
  <div class="form-group">
    <label for="description">Name</label>
    <textarea type="text" class="form-control" id="name" aria-describedby="text" name='name' placeholder="name">{{event.name}}</textarea>
  </div>
  <div class="form-group">
    <label for="capacity">Price</label>
      <div class="input-group mb-3">  
        <input type="number" class="form-control col-1" id="price" name='price' placeholder="Price" value="{{event.price}}">
          <div class="input-group-append">
              <span class="input-group-text">â‚¬</span>
          </div>
      </div>
  </div>
  <button type="submit" class="btn btn-outline-info mb-5">Submit</button>
</form>
<a href="/bars/{{bar.id}}"><i class="fa fa-angle-left ml-5" aria-hidden="true"></i></a>
